<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
    xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.gwt-popup{
			background-color: white;
		}
		.label {
			font-size: 14px;
			margin-bottom: 10px;
			margin-left: 10px;
			width: 220px;
			}
		.button {
			font-weight: bold;
			margin-left: 20px;
			margin-bottom: 20px;
		}
		.heading{
  			font-size: 2em;
  			font-weight: bold;
  			color: #777777;
  			margin-top: 40px;
  			margin-left: 10px;
  			margin-bottom: 20px;
		}
				.currentValue{
			width: 40px;
			margin-left: 14px;

		}
	</ui:style>
	<g:HTMLPanel>
		<g:Label styleName="{style.heading}">Quartalsauswertung </g:Label>
		<div styleName="body">
		<g:VerticalPanel>
			<g:HorizontalPanel>
	    		<g:Label styleName="{style.label}"> Verkaufte Produkte </g:Label>
				<g:TextBox styleName="{style.currentValue}" ui:field="tVerkaufteProdukte"/>	
	    	</g:HorizontalPanel>
 			<g:HorizontalPanel>	    		 
	    		<g:Label styleName="{style.label}"> Marktanteil </g:Label>
				<g:TextBox styleName="{style.currentValue}" ui:field="tMarktanteil"/>	
	    	</g:HorizontalPanel>
	    	<g:HorizontalPanel>	    		 
	    		<g:Label styleName="{style.label}"> Preis </g:Label>
				<g:TextBox styleName="{style.currentValue}" ui:field="tPreis"/>	
	    	</g:HorizontalPanel>
	    	<g:HorizontalPanel>
	    	    <g:Button styleName="{style.button}" ui:field="bNeueRunde" />
	    	</g:HorizontalPanel>
 		</g:VerticalPanel>
 		</div>
	</g:HTMLPanel>
</ui:UiBinder> 